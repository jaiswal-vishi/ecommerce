<h1>Your Cart</h1>

<% @cart_items.each do |cart_item| %>
  <div class="cart-item">
    <h3><%= cart_item.product.name %></h3>
    <p>Price: <%= cart_item.product.price %></p>
    <%= link_to 'Remove', cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<%= link_to 'Place Order', orders_path, class: 'btn btn-primary' %>
